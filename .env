# Environment Variables for Neo Brutalism Todo App
VITE_APP_NAME=Neo Brutalism Todo App
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=A bold and edgy todo application with neo-brutalist design

# Development Environment
NODE_ENV=development
VITE_DEV_PORT=5173

# Local Storage Keys
VITE_STORAGE_KEY=neo-brutalism-todos
VITE_THEME_KEY=neo-brutalism-theme

# App Configuration
VITE_MAX_TODOS=100
VITE_AUTO_SAVE=true
VITE_ANIMATION_DURATION=200

# Feature Flags
VITE_ENABLE_SOUND_EFFECTS=false
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_EXPORT=true